<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/card"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="4sp"
    card_view:cardUseCompatPadding="true">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:background="?backgroundColorSecondary">

        <TableRow>

            <Button
                android:id="@+id/button_vol_down"
                style="@style/button"
                android:layout_width="wrap_content"
                android:text="@string/volume_down" />

            <Button
                android:id="@+id/button_vol_up"
                style="@style/button"
                android:layout_width="wrap_content"
                android:text="@string/volume_up" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/button_left"
                style="@style/button"
                android:layout_width="wrap_content"
                android:text="@string/left_brace" />

            <Button
                android:id="@+id/button_right"
                style="@style/button"
                android:layout_width="wrap_content"
                android:text="@string/right_brace" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/button_slp"
                style="@style/button"
                android:layout_width="wrap_content"
                android:text="@string/slp" />

            <Button
                android:id="@+id/button_ms"
                style="@style/button"
                android:layout_width="wrap_content"
                android:text="@string/m_s" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/button_prog_1"
                style="@style/button"
                android:layout_width="wrap_content"
                android:text="@string/channel1" />

            <Button
                android:id="@+id/button_prog_2"
                style="@style/button"
                android:layout_width="wrap_content"
                android:text="@string/channel2" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/button_prog_3"
                style="@style/button"
                android:layout_width="wrap_content"
                android:text="@string/channel3" />

            <Button
                android:id="@+id/button_prog_4"
                style="@style/button"
                android:layout_width="wrap_content"
                android:text="@string/channel4" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/button_prog_5"
                style="@style/button"
                android:layout_width="wrap_content"
                android:text="@string/channel5" />

            <Button
                android:id="@+id/button_prog_6"
                style="@style/button"
                android:layout_width="wrap_content"
                android:text="@string/channel6" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/button_prog_7"
                style="@style/button"
                android:layout_width="wrap_content"
                android:text="@string/channel7" />

            <Button
                android:id="@+id/button_prog_8"
                style="@style/button"
                android:layout_width="wrap_content"
                android:text="@string/channel8" />
        </TableRow>
    </TableLayout>

</androidx.cardview.widget.CardView>
