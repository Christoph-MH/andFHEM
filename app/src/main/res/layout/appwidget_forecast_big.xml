<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/appwidget_big"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/appwidget_big_caption"
        android:id="@+id/deviceName"
        android:textSize="15sp"
        android:padding="5dp" />

    <TextView
        android:layout_height="3dp"
        android:layout_width="match_parent"
        style="@style/appwidget_big_caption_content_separator"
        android:background="@drawable/appwidget_big_caption_content_separator"/>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        style="@style/appwidget_big_content">

        <ListView
            android:listSelector="@drawable/actionbar_item_bg_selectable"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/forecastList"/>

    </LinearLayout>
</LinearLayout>