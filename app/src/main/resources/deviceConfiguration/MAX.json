{
  "defaultGroup": "HEATING",
  "sensorDevice": true,
  "supportedWidgets": [
    "TemperatureWidgetView"
  ],
  "states": [
    {
      "key": "temperature",
      "desc": "temperature",
      "showInOverview": true,
      "markers": [
        "WidgetTemperatureField"
      ]
    },
    {
      "key": "mode",
      "desc": "mode",
      "showInOverview": true,
      "showAfter": "temperature"
    },
    {
      "key": "desiredTemperature",
      "desc": "desiredTemperature",
      "showInOverview": true,
      "showAfter": "mode"
    },
    {
      "key": "comfortTemperature",
      "desc": "comfortTemperature",
      "showAfter": "desiredTemperature",
      "beforeCommandReplace": [
        {
          "search": "4\\.5",
          "replaceBy": "off"
        },
        {
          "search": "30\\.5",
          "replaceBy": "on"
        }
      ]
    },
    {
      "key": "ecoTemperature",
      "desc": "ecoTemperature",
      "showAfter": "comfortTemperature",
      "beforeCommandReplace": [
        {
          "search": "4\\.5",
          "replaceBy": "off"
        },
        {
          "search": "30\\.5",
          "replaceBy": "on"
        }
      ]
    },
    {
      "key": "minimumTemperature",
      "desc": "minimumTemperature",
      "showAfter": "ecoTemperature",
      "beforeCommandReplace": [
        {
          "search": "4\\.5",
          "replaceBy": "off"
        },
        {
          "search": "30\\.5",
          "replaceBy": "on"
        }
      ]
    },
    {
      "key": "maximumTemperature",
      "desc": "maximumTemperature",
      "showAfter": "minimumTemperature",
      "beforeCommandReplace": [
        {
          "search": "4\\.5",
          "replaceBy": "off"
        },
        {
          "search": "30\\.5",
          "replaceBy": "on"
        }
      ]
    },
    {
      "key": "valveposition",
      "desc": "actuator",
      "showInOverview": true,
      "showAfter": "minimumTemperature",
      "markers": [
        "WidgetTemperatureAdditionalField"
      ]
    },
    {
      "key": "weekProfile",
      "desc": "timetable",
      "beforeCommandReplace": [
        {
          "search": "4\\.5",
          "replaceBy": "off"
        },
        {
          "search": "30\\.5",
          "replaceBy": "on"
        }
      ]
    },
    {
      "key": "battery",
      "desc": "battery",
      "showAfter": "valveposition"
    }
  ],
  "sanitise": {
    "deviceValues": {
      "state": {
        "append": "°C",
        "extract": "double"
      },
      "temperature": {
        "append": "°C",
        "extract": "double"
      },
      "valveposition": {
        "append": "%",
        "extract": "int"
      },
      "sets": {
        "replaceAll": [
          {
            "search": ":(4.5|off),5.0,5.5,6.0,6.5,7.0,7.5,8.0,8.5,9.0,9.5,10.0,10.5,11.0,11.5,12.0,12.5,13.0,13.5,14.0,14.5,15.0,15.5,16.0,16.5,17.0,17.5,18.0,18.5,19.0,19.5,20.0,20.5,21.0,21.5,22.0,22.5,23.0,23.5,24.0,24.5,25.0,25.5,26.0,26.5,27.0,27.5,28.0,28.5,29.0,29.5,30.0,(30.5|on)",
            "replaceBy": ":slider,4.5,0.5,30.5"
          }
        ]
      },
      "comfortTemperature": {
        "append": "°C",
        "extract": "double",
        "replaceAll": [
          {
            "search": "on",
            "replaceBy": "30.5"
          },
          {
            "search": "off",
            "replaceBy": "4.5"
          }
        ]
      },
      "ecoTemperature": {
        "append": "°C",
        "extract": "double",
        "replaceAll": [
          {
            "search": "on",
            "replaceBy": "30.5"
          },
          {
            "search": "off",
            "replaceBy": "4.5"
          }
        ]
      },
      "maximumTemperature": {
        "append": "°C",
        "extract": "double",
        "replaceAll": [
          {
            "search": "on",
            "replaceBy": "30.5"
          },
          {
            "search": "off",
            "replaceBy": "4.5"
          }
        ]
      },
      "minimumTemperature": {
        "append": "°C",
        "extract": "double",
        "replaceAll": [
          {
            "search": "on",
            "replaceBy": "30.5"
          },
          {
            "search": "off",
            "replaceBy": "4.5"
          }
        ]
      },
      "windowOpenTemperature": {
        "append": "°C",
        "extract": "double",
        "replaceAll": [
          {
            "search": "on",
            "replaceBy": "30.5"
          },
          {
            "search": "off",
            "replaceBy": "4.5"
          }
        ]
      }
    },
    "__general__": {
      "addAttributesIfNotPresent": [
        {
          "key": "windowOpenTemperature",
          "value": "4.5"
        },
        {
          "key": "minimumTemperature",
          "value": "4.5"
        },
        {
          "key": "maximumTemperature",
          "value": "4.5"
        },
        {
          "key": "ecoTemperature",
          "value": "4.5"
        },
        {
          "key": "comfortTemperature",
          "value": "4.5"
        }
      ]
    }
  }
}