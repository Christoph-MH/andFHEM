        "append": "°C",
        "extract": "double",
        "replaceAll": [
          {
            "search": "on",
            "replaceBy": "30.5"
          },
          {
            "search": "off",
            "replaceBy": "5.5"
          }
        ]
      },
      "night-temp": {
        "append": "°C",
        "extract": "double",
        "replaceAll": [
          {
            "search": "on",
            "replaceBy": "30.5"
          },
          {
            "search": "off",
            "replaceBy": "5.5"
          }
        ]
      },
      "windowopen-temp": {
        "append": "°C",
        "extract": "double",
        "replaceAll": [
          {
            "search": "on",
            "replaceBy": "30.5"
          },
          {
            "search": "off",
            "replaceBy": "5.5"
          }
        ]
      },
      "actuator": {
        "append": "%",
        "extract": "int"
      }
    }
  }
