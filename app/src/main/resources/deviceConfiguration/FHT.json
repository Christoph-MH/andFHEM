{
  "defaultGroup": "HEATING",
  "sensorDevice": true,
  "showStateInOverview": false,
  "states": [
    {
      "key": "day-temp",
      "desc": "dayTemperature",
      "showAfter": "desired-temp",
      "showDelayNotificationOnSwitch": true
    },
    {
      "key": "windowopen-temp",
      "desc": "windowOpenTemp",
      "showAfter": "night-temp",
      "showDelayNotificationOnSwitch": true,
      "beforeCommandReplace": [
        {
          "search": "5.5",
          "replaceBy": "off"
        },
        {
          "search": "30.5",
          "replaceBy": "on"
        }
      ]
    },
    {
      "key": "night-temp",
      "desc": "nightTemperature",
      "showAfter": "day-temp",
      "showDelayNotificationOnSwitch": true,
      "beforeCommandReplace": [
        {
          "search": "5.5",
          "replaceBy": "off"
        },
        {
          "search": "30.5",
          "replaceBy": "on"
        }
      ]
    },
    {
      "key": "desired-temp",
      "desc": "desiredTemperature",
      "showAfter": "temperature",
      "showInOverview": true,
      "showDelayNotificationOnSwitch": true,
      "beforeCommandReplace": [
        {
          "search": "5.5",
          "replaceBy": "off"
        },
        {
          "search": "30.5",
          "replaceBy": "on"
        }
      ]
    },
    {
      "key": "mode",
      "desc": "mode",
      "showInOverview": true,
      "showAfter": "actuator"
    },
    {
      "key": "measured-temp",
      "desc": "temperature",
      "showInOverview": true
    },
    {
      "key": "battery",
      "desc": "battery",
      "showAfter": "mode"
